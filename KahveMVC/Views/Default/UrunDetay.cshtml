@model KahveMVC.Models.EntityFramework.urunler
@{
    ViewBag.Title = Model.baslik;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="page-section">
    <div class="container">
        <div class="product-item">
            <div class="product-item-title d-flex">
                <div class="bg-faded p-5 d-flex ml-auto rounded" style="background-color: rgba(255,255,255,0.95);">
                    <h2 class="section-heading mb-0">
                        <span class="section-heading-upper text-primary">@Model.ustBaslik</span>
                        <span class="section-heading-lower">@Model.baslik</span>
                    </h2>
                </div>
            </div>

            <img class="product-item-img mx-auto d-flex rounded img-fluid mb-3 mb-lg-0"
                 src="~/Content/img/@Model.foto" alt="" style="box-shadow: 0 10px 20px rgba(0,0,0,0.2);">

            <div class="product-item-description d-flex mr-auto">
                <div class="bg-faded p-5 rounded" style="background-color: rgba(255,255,255,0.95); color: #333;">

                    <div class="mb-3">
                        @if (Model.stok == 0)
                        {
                            <span class="badge badge-danger p-2">STOK TÜKENDİ</span>
                        }
                        else if (Model.stok < 5)
                        {
                            <span class="badge badge-warning text-white p-2">Son @Model.stok Adet Kaldı!</span>
                        }
                        else
                        {
                            <span class="badge badge-success p-2">Stok Durumu: Müsait</span>
                        }
                    </div>

                    <div class="mb-4 text-justify">
                        @Html.Raw(Model.icerik)
                    </div>

                    <hr style="border-top: 1px solid rgba(0,0,0,0.1);">

                    <div class="d-flex flex-column">
                        <h3 class="font-weight-bold mb-3" style="color: #2c3e50;">
                            Fiyat: @(Model.Fiyat != 0 ? Model.Fiyat : 0) ₺
                        </h3>

                        <div class="d-flex align-items-center">

                            @if (Model.stok > 0)
                            {
                                <a href="/Sepet/SepeteEkle/@Model.id" class="btn btn-primary font-weight-bold btn-xl">
                                    Sepete Ekle
                                </a>
                            }
                            else
                            {
                                <button class="btn btn-secondary btn-xl" disabled>Ürün Tükendi</button>
                            }

                            <a href="/Murunler" class="btn btn-outline-dark font-weight-bold ml-3">
                                Menüye Dön
                            </a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>