@model List<KahveMVC.Models.EntityFramework.siparis>
@{
    ViewBag.Title = "Siparişlerim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="page-section cta">
    <div class="container">
        <div class="row">
            <div class="col-xl-9 mx-auto">
                <div class="cta-inner text-center rounded">

                    <h2 class="section-heading mb-4">
                        <span class="section-heading-upper">Hesap Hareketleri</span>
                        <span class="section-heading-lower">Geçmiş Siparişlerim</span>
                    </h2>

                    @if (Model.Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>Tarih</th>
                                        <th>Tutar</th>
                                        <th>Durum</th>
                                        <th>Detay</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @* Tarih boş gelirse hata vermesin diye kontrol *@
                                                @(item.tarih.HasValue ? item.tarih.Value.ToString("dd.MM.yyyy HH:mm") : "-")
                                            </td>

                                            <td style="font-weight:bold;">@item.toplamTutar ₺</td>

                                            <td>
                                                @if (item.durum == "Bekleniyor")
                                                {
                                                    <span class="badge badge-warning" style="color:white;">Hazırlanıyor</span>
                                                }
                                                else if (item.durum == "Kargolandı")
                                                {
                                                    <span class="badge badge-info">Kargoda</span>
                                                }
                                                else if (item.durum == "Tamamlandı")
                                                {
                                                    <span class="badge badge-success">Teslim Edildi</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-secondary">@item.durum</span>
                                                }
                                            </td>

                                            <td>
                                                <a href="#" class="btn btn-sm btn-primary">İncele</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            Henüz vermiş olduğunuz bir sipariş bulunmamaktadır.
                        </div>
                        <a href="/Default/Index" class="btn btn-warning font-weight-bold">Hemen Alışverişe Başla</a>
                    }

                </div>
            </div>
        </div>
    </div>
</section>