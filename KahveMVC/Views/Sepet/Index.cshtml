@model List<KahveMVC.Models.SepetUrun>
@{
    ViewBag.Title = "Sepetim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="page-section about-heading">
    <div class="container">
        <div class="about-heading-content">
            <div class="row">
                <div class="col-xl-9 col-lg-10 mx-auto">
                    <div class="bg-faded rounded p-5">
                        <h2 class="section-heading mb-4">
                            <span class="section-heading-upper">Alışveriş Sepetiniz</span>
                            <span class="section-heading-lower">Sepet Durumu</span>
                        </h2>

                        @if (Model != null && Model.Count > 0)
                        {
                            <table class="table table-hover table-bordered">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>Ürün</th>
                                        <th>Adet</th>
                                        <th>Fiyat</th>
                                        <th>Tutar</th>
                                        <th>İşlem</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td style="vertical-align: middle;">
                                                @if (!string.IsNullOrEmpty(item.Resim))
                                                {
                                                    <img src="@item.Resim" width="50" height="50" style="border-radius:50%; margin-right:10px;" />
                                                }
                                                @item.UrunAd
                                            </td>
                                            <td style="vertical-align: middle;">@item.adet</td>
                                            <td style="vertical-align: middle;">@item.fiyat TL</td>
                                            <td style="vertical-align: middle; font-weight:bold;">@item.ToplamTutar TL</td>
                                            <td style="vertical-align: middle;">
                                                <a href="#" class="btn btn-danger btn-sm">Sil</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td colspan="3" class="text-right"><strong>GENEL TOPLAM:</strong></td>
                                        <td colspan="2" class="text-danger" style="font-size:1.2em;">
                                            <strong>@Model.Sum(x => x.ToplamTutar) TL</strong>
                                        </td>
                                    </tr>
                                </tfoot>
                            </table>

                            <div class="text-center mt-4">
                                <a href="/Murunler/Index" class="btn btn-secondary">Alışverişe Devam Et</a>
                                <a href="#" class="btn btn-primary ml-2">Sepeti Onayla</a>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-warning text-center">
                                <h4>Sepetinizde henüz ürün bulunmamaktadır.</h4>
                                <p>Lezzetli kahvelerimize göz atmak ister misiniz?</p>
                                <a href="/Murunler/Index" class="btn btn-primary mt-3">Ürünlere Git</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>