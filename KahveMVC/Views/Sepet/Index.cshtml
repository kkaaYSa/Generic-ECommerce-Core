@model List<KahveMVC.Models.SepetUrun>
@{
    ViewBag.Title = "Sepetim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="page-section about-heading">
    <div class="container">
        <div class="about-heading-content">
            <div class="row">
                <div class="col-xl-9 col-lg-10 mx-auto">
                    <div class="bg-faded rounded p-5">
                        <h2 class="section-heading mb-4">
                            <span class="section-heading-upper">Alışveriş Sepetiniz</span>
                            <span class="section-heading-lower">Sepet Durumu</span>
                        </h2>

                        @if (Model != null && Model.Count > 0)
                        {
                            <table class="table table-hover table-bordered">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>Ürün</th>
                                        <th>Adet</th>
                                        <th>Fiyat</th>
                                        <th>Tutar</th>
                                        <th>İşlem</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <img src="~/Content/img/@item.Resim" width="100" height="70" style="object-fit:cover; border-radius:5px;" />
                                            </td>

                                            <td style="vertical-align: middle;">@item.UrunAd</td>

                                            <td style="vertical-align: middle;">
                                                <div style="display: flex; justify-content: center; align-items: center; gap: 10px;">
                                                    <a href="/Sepet/AdetAzalt/@item.UrunId" class="btn btn-sm btn-danger">-</a>
                                                    <span style="font-weight: bold; font-size: 1.1em;">@item.adet</span>
                                                    <a href="/Sepet/AdetArttir/@item.UrunId" class="btn btn-sm btn-success">+</a>
                                                </div>
                                            </td>

                                            <td style="vertical-align: middle;">@item.Fiyat ₺</td>

                                            <td style="vertical-align: middle; font-weight: bold; color: #28a745;">
                                                @(item.Fiyat * item.adet) ₺
                                            </td>

                                            <td style="vertical-align: middle;">
                                                <a href="/Sepet/SepettenSil/@item.UrunId" class="btn btn-danger btn-sm">Sil</a>
                                            </td>
                                        </tr>
                                    }

                                    @if (Model.Count > 0)
                                    {
                                        <tr style="background-color: #f8f9fa;">
                                            <td colspan="4" style="text-align: right; font-weight: bold;">GENEL TOPLAM:</td>
                                            <td style="font-weight: bold; font-size: 1.2em; color: #d9534f;">
                                                @(Model.Sum(x => x.Fiyat * x.adet)) ₺
                                            </td>
                                            <td></td>
                                        </tr>

                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td colspan="3" class="text-right"><strong>GENEL TOPLAM:</strong></td>
                                        <td colspan="2" class="text-danger" style="font-size:1.2em;">
                                            <strong>@Model.Sum(x => x.ToplamTutar) TL</strong>
                                        </td>
                                    </tr>
                                </tfoot>
                            </table>

                            <div class="row">
                                <div class="col-md-6">
                                    <a href="/Murunler" class="btn btn-primary btn-block">
                                        <i class="fas fa-arrow-left"></i> Alışverişe Devam Et
                                    </a>
                                </div>
                                <div class="col-md-6">
                                    <a href="/Sepet/SepetiOnayla" class="btn btn-success btn-block font-weight-bold">
                                        Sepeti Onayla <i class="fas fa-check"></i>
                                    </a>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-warning text-center">
                                <h4>Sepetinizde henüz ürün bulunmamaktadır.</h4>
                                <p>Lezzetli kahvelerimize göz atmak ister misiniz?</p>
                                <a href="/Murunler" class="btn btn-primary font-weight-bold">Ürünlere Git</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>