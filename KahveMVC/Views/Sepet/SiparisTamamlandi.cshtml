@{
    ViewBag.Title = "Sipariş Tamamlandı";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="page-section cta">
    <div class="container">
        <div class="row">
            <div class="col-xl-9 mx-auto">
                <div class="cta-inner text-center rounded">
                    <h2 class="section-heading mb-4">
                        <span class="section-heading-upper">Teşekkürler</span>
                        <span class="section-heading-lower">Siparişiniz Alındı!</span>
                    </h2>

                    <p class="mb-0">
                        <i class="fas fa-check-circle" style="font-size: 60px; color: green;"></i>
                    </p>
                    <br />

                    <p class="mb-3">
                        Sayın
                        <strong>
                            @if (Session["KullaniciAdi"] != null)
                            {
                                @Session["KullaniciAdi"] }
                            else if (Session["MisafirBilgi"] != null)
                            {
                                @Session["MisafirBilgi"] }
                            else
                            {
                                <span>Müşterimiz</span>
                            }
                        </strong>, siparişiniz başarıyla bize ulaştı.
                        <br />
                        En kısa sürede müşteri temsilcimiz sizinle iletişime geçecektir.
                    </p>

                    <a href="/Default/Murunler" class="btn btn-primary btn-xl">Alışverişe Devam Et</a>
                </div>
            </div>
        </div>
    </div>
</section>