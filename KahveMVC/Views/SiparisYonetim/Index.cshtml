@model List<KahveMVC.Models.EntityFramework.siparis>
@{
    ViewBag.Title = "Gelen Siparişler";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <h2 class="mt-4">📦 Gelen Siparişler</h2>
    <hr />

    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i> Sipariş Listesi
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                    <thead class="thead-dark">
                        <tr>
                            <th>Sipariş No</th>
                            <th>Müşteri</th>
                            <th>Tarih</th>
                            <th>Tutar</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>#@item.id</td>
                                <td>@item.adSoyad</td>
                                <td>@item.tarih.Value.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>@item.toplamTutar ₺</td>

                                <td>
                                    @if (item.durum == "Bekleniyor")
                                    {<span class="badge badge-warning">Bekleniyor</span> }
                                    else if (item.durum == "Kargolandı")
                                    { <span class="badge badge-info">Kargolandı</span> }
                                    else if (item.durum == "Tamamlandı")
                                    { <span class="badge badge-success">Tamamlandı</span> }
                                    else
                                    { <span class="badge badge-secondary">@item.durum</span>}
                                </td>

                                <td>
                                    <a href="/SiparisYonetim/Detay/@item.id" class="btn btn-primary btn-sm">
                                        <i class="fas fa-eye"></i> Detay
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>